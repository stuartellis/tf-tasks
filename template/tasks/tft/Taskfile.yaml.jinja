#
# Terraform and OpenTofu tasks for the Task runner.
#
# https://github.com/stuartellis/tf-tasks
#
# Requirements:
#
# - A UNIX shell
# - Git
# - Task
# - Terraform or OpenTofu
#
# A _unit_ is a TF root module that can be managed by these tasks.
# Each instance of a _unit_ is an _edition_.
#
# The tasks require these environment variables to work on a unit:
#
# TFT_CONTEXT - TF configuration
# TFT_UNIT    - Name of unit
#
# Set these variables to override the defaults:
#
# TFT_PRODUCT_NAME   - Name of project
# TFT_CLI_EXE        - The Terraform or OpenTofu executable to use
# TFT_EDITION        - Name of TF workspace
# TFT_REMOTE_BACKEND - Set TFT_REMOTE_BACKEND to "false" to force the use of local TF state:
#
# TFT_REMOTE_BACKEND=false
#
# yamllint disable rule:line-length

version: "3.38"

## Variables ##

vars:
  # Defaults
  DEFAULT_TFT_CLI_EXE: terraform
  DEFAULT_TFT_EDITION: default
  DEFAULT_TFT_PRODUCT_NAME:
    ref: "base .ROOT_DIR"

  # Variables to override

  # Override with TFT_CLI_EXE to specify the Terraform or OpenTofu executable
  # To use OpenTofu, specify: TFT_CLI_EXE=tofu
  CURRENT_TFT_CLI_EXE:
    ref: "default .DEFAULT_TFT_CLI_EXE .TFT_CLI_EXE"
  # Override with TFT_EDITION to specify the name of the TF workspace
  CURRENT_TFT_EDITION:
    ref: "default .DEFAULT_TFT_EDITION .TFT_EDITION"
  # Override with TFT_PRODUCT_NAME to specify the name of the product or project
  CURRENT_TFT_PRODUCT_NAME:
    ref: "default .DEFAULT_TFT_PRODUCT_NAME .TFT_PRODUCT_NAME"

  # Pre-set variables
  TFT_ROOT_DIR: tf
  TFT_SHARED_CONTEXT: all
  TFT_TEMPLATE_NAME: template

  # Calculated variables

  TFT_CONTEXTS_DIR: "{{.ROOT_DIR}}/{{.TFT_ROOT_DIR}}/contexts"
  TFT_UNITS_DIR: "{{.ROOT_DIR}}/{{.TFT_ROOT_DIR}}/units"
  TFT_UNIT_DIR: "{{.TFT_UNITS_DIR}}/{{.TFT_UNIT}}"
  TFT_TMP_DIR: "{{.ROOT_DIR}}/tmp/{{.TFT_ROOT_DIR}}"

  TFT_CLI_CHDIR_OPT: "-chdir={{.TFT_UNIT_DIR}}"
  TFT_CLI_VAR_FILES_OPT: "-var-file={{.TFT_CONTEXTS_DIR}}/{{.TFT_SHARED_CONTEXT}}/{{.TFT_UNIT}}.tfvars -var-file={{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/{{.TFT_UNIT}}.tfvars"

  TFT_CONTEXTS:
    sh: ls -d {{.TFT_CONTEXTS_DIR}}/*/ | xargs -n 1 basename
  TFT_CONTEXTS_LIST:
    ref: 'splitList "\n" .TFT_CONTEXTS'
  TFT_FILTERED_TFT_CONTEXTS:
    ref: "without .TFT_CONTEXTS_LIST .TFT_SHARED_CONTEXT .TFT_TEMPLATE_NAME"

  TFT_UNITS:
    sh: ls -d {{.TFT_UNITS_DIR}}/*/ | xargs -n 1 basename
  TFT_UNITS_LIST:
    ref: 'splitList "\n" .TFT_UNITS'
  TFT_FILTERED_UNITS:
    ref: "without .TFT_UNITS_LIST .TFT_TEMPLATE_NAME"

env:
  TF_WORKSPACE: "{{.CURRENT_TFT_EDITION}}"

## Tasks ##

tasks:
  apply:
    desc: Apply TF unit
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} apply {{.CLI_ARGS}} {{.TFT_CLI_PLAN_PATH}}.tfplan"
    requires:
      vars: [TFT_CONTEXT, TFT_UNIT]
    vars:
      TFT_CONTEXT_DOCUMENT:
        sh: cat {{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/context.json
      TFT_CONTEXT_CONFIG:
        ref: "fromJson .TFT_CONTEXT_DOCUMENT"
      TFT_CLI_PLAN_PATH: "{{.TFT_TMP_DIR}}/{{.CURRENT_TFT_PRODUCT_NAME}}-{{.TFT_UNIT}}-{{.TFT_CONTEXT_CONFIG.metadata.environment}}-{{.CURRENT_TFT_EDITION}}"

  check-fmt:
    desc: Check formatting of TF code for unit
    cmds:
      - for:
          var: TFT_FILTERED_TFT_CONTEXTS
        cmd: "{{.CURRENT_TFT_CLI_EXE}} fmt -check -diff -recursive {{.CLI_ARGS}} {{.TFT_CONTEXTS_DIR}}/{{.ITEM}}/{{.TFT_UNIT}}.tfvars"
      - cmd: "{{.CURRENT_TFT_CLI_EXE}} fmt -check -diff -recursive {{.CLI_ARGS}} {{.TFT_CONTEXTS_DIR}}/{{.TFT_SHARED_CONTEXT}}/{{.TFT_UNIT}}.tfvars"
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} fmt -check -diff -recursive {{.CLI_ARGS}}"
    requires:
      vars: [TFT_UNIT]

  clean:
    desc: Clean TF unit
    cmds:
      - "rm -fr {{.TFT_UNIT_DIR}}/.terraform"
      - "rm -f {{.TFT_TMP_DIR}}/{{.CURRENT_TFT_PRODUCT_NAME}}-{{.TFT_UNIT}}-*.tfplan"
      - "rm -f {{.TFT_TMP_DIR}}/{{.CURRENT_TFT_PRODUCT_NAME}}-{{.TFT_UNIT}}-*.json"
    requires:
      vars: [TFT_UNIT]

  copy:
    desc: Create a new TF unit as a copy of an existing unit
    cmds:
      - "mkdir {{.TFT_UNITS_DIR}}/{{.TFT_UNIT}}"
      - "cp -r {{.TFT_UNITS_DIR}}/{{.TFT_SOURCE_UNIT}}/* {{.TFT_UNITS_DIR}}/{{.TFT_UNIT}}"
      - for:
          var: TFT_FILTERED_TFT_CONTEXTS
        cmd: cp "{{.TFT_CONTEXTS_DIR}}/{{.ITEM}}/{{.TFT_SOURCE_UNIT}}.tfvars" "{{.TFT_CONTEXTS_DIR}}/{{.ITEM}}/{{.TFT_UNIT}}.tfvars"
      - cmd: cp "{{.TFT_CONTEXTS_DIR}}/{{.TFT_SHARED_CONTEXT}}/{{.TFT_SOURCE_UNIT}}.tfvars" "{{.TFT_CONTEXTS_DIR}}/{{.TFT_SHARED_CONTEXT}}/{{.TFT_UNIT}}.tfvars"
    requires:
      vars: [TFT_SOURCE_UNIT, TFT_UNIT]

  console:
    desc: Open a TF console for unit
    aliases:
      - shell
    interactive: true
    cmds:
      - "terraform {{.TFT_CLI_CHDIR_OPT}} console {{.TFT_CLI_VARS_OPT}} {{.TFT_CLI_VAR_FILES_OPT}} {{.CLI_ARGS}}"
    requires:
      vars: [TFT_CONTEXT, CURRENT_TFT_PRODUCT_NAME, TFT_UNIT, CURRENT_TFT_EDITION]
    vars:
      TFT_CONTEXT_DOCUMENT:
        sh: cat {{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/context.json
      TFT_CONTEXT_CONFIG:
        ref: "fromJson .TFT_CONTEXT_DOCUMENT"
      TFT_CLI_VARS_OPT: "-var='tft_product_name={{.CURRENT_TFT_PRODUCT_NAME}}' -var='tft_unit_name={{.TFT_UNIT}}' -var='tft_environment_name={{.TFT_CONTEXT_CONFIG.metadata.environment}}' -var='tft_edition_name={{.CURRENT_TFT_EDITION}}'"

  destroy:
    desc: Destroy resources for TF unit
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} apply -destroy -auto-approve {{.TFT_CLI_VARS_OPT}} {{.TFT_CLI_VAR_FILES_OPT}} {{.CLI_ARGS}}"
    requires:
      vars: [TFT_CONTEXT, CURRENT_TFT_PRODUCT_NAME, TFT_UNIT, CURRENT_TFT_EDITION]
    vars:
      TFT_CONTEXT_DOCUMENT:
        sh: cat {{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/context.json
      TFT_CONTEXT_CONFIG:
        ref: "fromJson .TFT_CONTEXT_DOCUMENT"
      TFT_CLI_VARS_OPT: "-var='tft_product_name={{.CURRENT_TFT_PRODUCT_NAME}}' -var='tft_unit_name={{.TFT_UNIT}}' -var='tft_environment_name={{.TFT_CONTEXT_CONFIG.metadata.environment}}' -var='tft_edition_name={{.CURRENT_TFT_EDITION}}'"

  fmt:
    desc: Format code for TF unit
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} {{.CLI_ARGS}} fmt"
      - for:
          var: TFT_FILTERED_TFT_CONTEXTS
        cmd: "{{.CURRENT_TFT_CLI_EXE}} fmt {{.TFT_CONTEXTS_DIR}}/{{.ITEM}}/{{.TFT_UNIT}}.tfvars"
      - cmd: "{{.CURRENT_TFT_CLI_EXE}} fmt {{.TFT_CONTEXTS_DIR}}/{{.TFT_SHARED_CONTEXT}}/{{.TFT_UNIT}}.tfvars"
    requires:
      vars: [TFT_UNIT]

  forget:
    desc: Delete a workspace from the current TF remote backend
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} workspace delete {{.CLI_ARGS}} {{.TFT_EDITION}}"
    requires:
      vars: [TFT_UNIT, TFT_EDITION]
    env:
      TF_WORKSPACE: "{{.DEFAULT_TFT_EDITION}}"

  list:
    desc: List TF units
    aliases:
      - units
    silent: true
    cmds:
      - for:
          var: TFT_FILTERED_UNITS
        cmd: echo "{{.ITEM}}"

  new:
    desc: Create a new TF unit from the template
    cmds:
      - cp -r "{{.TFT_UNITS_DIR}}/template" "{{.TFT_UNITS_DIR}}/{{.TFT_UNIT}}"
      - for:
          var: TFT_FILTERED_TFT_CONTEXTS
        cmd: cp "{{.TFT_CONTEXTS_DIR}}/template/standard.tfvars" "{{.TFT_CONTEXTS_DIR}}/{{.ITEM}}/{{.TFT_UNIT}}.tfvars"
      - cmd: cp "{{.TFT_CONTEXTS_DIR}}/template/{{.TFT_SHARED_CONTEXT}}.tfvars" "{{.TFT_CONTEXTS_DIR}}/{{.TFT_SHARED_CONTEXT}}/{{.TFT_UNIT}}.tfvars"
    requires:
      vars: [TFT_UNIT]

  plan:
    desc: Create TF plan for unit
    cmds:
      - mkdir -p "{{.TFT_TMP_DIR}}"
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} plan -out={{.TFT_CLI_PLAN_PATH}}.tfplan {{.TFT_CLI_VARS_OPT}} {{.TFT_CLI_VAR_FILES_OPT}} {{.CLI_ARGS}}"
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} show -json {{.TFT_CLI_PLAN_PATH}}.tfplan {{.CLI_ARGS}} > {{.TFT_CLI_PLAN_PATH}}.json"
    requires:
      vars: [TFT_CONTEXT, CURRENT_TFT_PRODUCT_NAME, TFT_UNIT, CURRENT_TFT_EDITION]
    vars:
      TFT_CONTEXT_DOCUMENT:
        sh: cat {{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/context.json
      TFT_CONTEXT_CONFIG:
        ref: "fromJson .TFT_CONTEXT_DOCUMENT"
      TFT_CLI_PLAN_PATH: "{{.TFT_TMP_DIR}}/{{.CURRENT_TFT_PRODUCT_NAME}}-{{.TFT_UNIT}}-{{.TFT_CONTEXT_CONFIG.metadata.environment}}-{{.CURRENT_TFT_EDITION}}"
      TFT_CLI_VARS_OPT: "-var='tft_product_name={{.CURRENT_TFT_PRODUCT_NAME}}' -var='tft_unit_name={{.TFT_UNIT}}' -var='tft_environment_name={{.TFT_CONTEXT_CONFIG.metadata.environment}}' -var='tft_edition_name={{.CURRENT_TFT_EDITION}}'"

  rm:
    desc: Remove code for TF unit
    cmds:
      - rm -fr "{{.TFT_UNITS_DIR}}/{{.TFT_UNIT}}"
      - rm -f "{{.TFT_CONTEXTS_DIR}}/{{.TFT_SHARED_CONTEXT}}/{{.TFT_UNIT}}.tfvars"
      - for:
          var: TFT_FILTERED_TFT_CONTEXTS
        cmd: rm -f "{{.TFT_CONTEXTS_DIR}}/{{.ITEM}}/{{.TFT_UNIT}}.tfvars"
    requires:
      vars: [TFT_UNIT]

  test:
    desc: Run TF test for unit
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} test {{.TFT_CLI_VARS_OPT}} {{.TFT_CLI_VAR_FILES_OPT}} {{.CLI_ARGS}}"
    requires:
      vars: [TFT_CONTEXT, CURRENT_TFT_PRODUCT_NAME, TFT_UNIT, CURRENT_TFT_EDITION]
    vars:
      TFT_CONTEXT_DOCUMENT:
        sh: cat {{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/context.json
      TFT_CONTEXT_CONFIG:
        ref: "fromJson .TFT_CONTEXT_DOCUMENT"
      TFT_CLI_VARS_OPT: "-var='tft_product_name={{.CURRENT_TFT_PRODUCT_NAME}}' -var='tft_unit_name={{.TFT_UNIT}}' -var='tft_environment_name={{.TFT_CONTEXT_CONFIG.metadata.environment}}' -var='tft_edition_name={{.CURRENT_TFT_EDITION}}'"

  validate:
    desc: Validate TF unit
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} validate {{.CLI_ARGS}}"
    requires:
      vars: [TFT_UNIT]

  ## Tasks for editions (instances of TF root modules) ##

  edition:id:
    desc: Show the unique ID for the instance of the TF unit
    aliases:
      - instance:id
      - edition
    silent: true
    cmds:
      - echo "{{.TFT_EDITION_ID}}"
    requires:
      vars: [TFT_CONTEXT, CURRENT_TFT_PRODUCT_NAME, TFT_UNIT, CURRENT_TFT_EDITION]
    vars:
      TFT_INSTANCE_NAME: "{{.CURRENT_TFT_PRODUCT_NAME}}-{{.TFT_CONTEXT}}-{{.TFT_UNIT}}-{{.CURRENT_TFT_EDITION}}"
      TFT_LOWERCASE_INSTANCE_NAME:
        ref: "lower .TFT_INSTANCE_NAME"
      TFT_SHA256:
        ref: "sha256sum .TFT_LOWERCASE_INSTANCE_NAME"
      TFT_EDITION_ID:
        ref: "substr 0 8 .TFT_SHA256"

  edition:sha256:
    desc: Show the SHA256 hash for the instance of the TF unit
    aliases:
      - instance:sha256
    silent: true
    cmds:
      - echo "{{.TFT_SHA256}}"
    requires:
      vars: [TFT_CONTEXT, CURRENT_TFT_PRODUCT_NAME, TFT_UNIT, CURRENT_TFT_EDITION]
    vars:
      TFT_INSTANCE_NAME: "{{.CURRENT_TFT_PRODUCT_NAME}}-{{.TFT_CONTEXT}}-{{.TFT_UNIT}}-{{.CURRENT_TFT_EDITION}}"
      TFT_LOWERCASE_INSTANCE_NAME:
        ref: "lower .TFT_INSTANCE_NAME"
      TFT_SHA256:
        ref: "sha256sum .TFT_LOWERCASE_INSTANCE_NAME"

  ## Context tasks ##

  context:list:
    desc: List contexts
    aliases:
      - contexts
    silent: true
    cmds:
      - for:
          var: TFT_FILTERED_TFT_CONTEXTS
        cmd: echo "{{.ITEM}}"

  context:new:
    desc: Create a new TF context
    cmds:
      - mkdir -p "{{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}"
      - for:
          var: TFT_FILTERED_UNITS
        cmd: cp "{{.TFT_CONTEXTS_DIR}}/template/standard.tfvars" "{{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/{{.ITEM}}.tfvars"
      - cp "{{.TFT_CONTEXTS_DIR}}/template/context.json" "{{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}"
      - sed -i 's/ENVIRONMENT_NAME/{{.TFT_CONTEXT}}/g' "{{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/context.json"
    requires:
      vars: [TFT_CONTEXT]

  context:rm:
    desc: Remove a TF context
    cmds:
      - rm -fr "{{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}"
    requires:
      vars: [TFT_CONTEXT]

  ## TF initialization tasks ##

  init:local:
    desc: Initialise local state for TF unit
    deps: [clean]
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} init -input=false {{.CLI_ARGS}}"
    requires:
      vars: [TFT_CONTEXT, TFT_UNIT]

  init:s3:
    desc: Initialise remote state for TF unit - S3 with native locking
    aliases:
      - init
    deps: [clean]
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} init -input=false {{.TFT_CLI_BACKEND_OPT}} {{.CLI_ARGS}}"
    requires:
      vars: [TFT_CONTEXT, TFT_UNIT]
    vars:
      TFT_CLI_BACKEND_DOCUMENT:
        sh: cat {{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/context.json
      TFT_CLI_BACKEND_CONFIG:
        ref: "fromJson .TFT_CLI_BACKEND_DOCUMENT"
      TFT_CLI_BACKEND_S3_OPT: >
        -backend-config=\"encrypt=true\"
        -backend-config=\"use_lockfile=true\"
        -backend-config=\"workspace_key_prefix=workspaces\"
        -backend-config=\"assume_role={role_arn=\\\"{{.TFT_CLI_BACKEND_CONFIG.backends.s3.role_arn}}\\\"}\"
        -backend-config=\"region={{.TFT_CLI_BACKEND_CONFIG.backends.s3.region}}\"
        -backend-config=\"bucket={{.TFT_CLI_BACKEND_CONFIG.backends.s3.tfstate_bucket}}\"
        -backend-config=\"key=components/{{.CURRENT_TFT_PRODUCT_NAME}}/{{.TFT_CLI_BACKEND_CONFIG.backends.s3.tfstate_dir}}/{{.TFT_UNIT}}.tfstate\"
      TFT_CLI_BACKEND_OPT:
        sh: echo {{if eq .TFT_REMOTE_BACKEND "false"}}{{else}}{{.TFT_CLI_BACKEND_S3_OPT}}{{end}}

  init:s3ddb:
    desc: Initialise remote state for TF unit - S3 with DynamoDB locking
    deps: [clean]
    cmds:
      - "{{.CURRENT_TFT_CLI_EXE}} {{.TFT_CLI_CHDIR_OPT}} init -input=false {{.TFT_CLI_BACKEND_OPT}} {{.CLI_ARGS}}"
    requires:
      vars: [TFT_CONTEXT, TFT_UNIT]
    vars:
      TFT_CLI_BACKEND_DOCUMENT:
        sh: cat {{.TFT_CONTEXTS_DIR}}/{{.TFT_CONTEXT}}/context.json
      TFT_CLI_BACKEND_CONFIG:
        ref: "fromJson .TFT_CLI_BACKEND_DOCUMENT"
      TFT_CLI_BACKEND_S3DDB_OPT: >
        -backend-config=\"encrypt=true\"
        -backend-config=\"workspace_key_prefix=workspaces\"
        -backend-config=\"assume_role={role_arn=\\\"{{.TFT_CLI_BACKEND_CONFIG.backends.s3ddb.role_arn}}\\\"}\"
        -backend-config=\"region={{.TFT_CLI_BACKEND_CONFIG.backends.s3ddb.region}}\"
        -backend-config=\"bucket={{.TFT_CLI_BACKEND_CONFIG.backends.s3ddb.tfstate_bucket}}\"
        -backend-config=\"dynamodb_table={{.TFT_CLI_BACKEND_CONFIG.backends.s3ddb.tfstate_ddb_table}}\"
        -backend-config=\"key=components/{{.CURRENT_TFT_PRODUCT_NAME}}/{{.TFT_CLI_BACKEND_CONFIG.backends.s3ddb.tfstate_dir}}/{{.TFT_UNIT}}.tfstate\"
      TFT_CLI_BACKEND_OPT:
        sh: echo {{if eq .TFT_REMOTE_BACKEND "false"}}{{else}}{{.TFT_CLI_BACKEND_S3DDB_OPT}}{{end}}
