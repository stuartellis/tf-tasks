resource "aws_ssm_parameter" "meta_instance_sha256" {
  name  = "/metadata/${local.meta_product_name}/${local.meta_environment_name}/${local.meta_unit_name}/${local.meta_edition}/sha256"
  type  = "String"
  value = local.meta_instance_sha256_hash
}

output "ssm_param_meta_instance_sha256_path" {
  value       = aws_ssm_parameter.meta_instance_sha256.name
  description = "Meta: The instance SHA256 SSM Parameter for a deployed TF root module."
}
